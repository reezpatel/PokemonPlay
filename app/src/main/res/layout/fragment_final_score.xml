<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_height="match_parent"
    tools:context="com.reezx.android.pokeplay.FinalScoreFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:shadowColor="#A0A"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.1"
            android:textSize="45sp"
            android:textColor="#fff"
            android:id="@+id/textViewFinalFragmentHeading"
            android:layout_marginBottom="32dp"
            android:text="@string/game_over" />


        <TextView
            android:layout_width="match_parent"
            android:layout_below="@id/textViewFinalFragmentHeading"
            android:id="@+id/textViewFinalFragmentScore"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:padding="15dp"
            android:textAlignment="center"
            android:background="@drawable/button_orange_shape"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</RelativeLayout>
