<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="0dp"
    android:layout_height="match_parent"
    tools:context="layout.MainFragment"
    android:paddingBottom="12dp"
    android:paddingEnd="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingStart="12dp">

    <ImageView
        android:contentDescription="@string/main_logo"
        android:layout_width="match_parent"
        android:id="@+id/imageViewMainFragmentLogo"
        android:src="@drawable/pokemon_main_logo"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:shadowColor="#A0A"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.1"
        android:textSize="45sp"
        android:textColor="#fff"
        android:id="@+id/textViewMainFragmentHeading"
        android:layout_marginBottom="12dp"
        android:layout_below="@id/imageViewMainFragmentLogo"
        android:text="@string/select_a_game" />

    <Button
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:elevation="14dp"
        android:textSize="14sp"
        android:maxLines="1"
        android:id="@+id/buttonOneMainFragmentOne"
        android:padding="10dp"
        android:textColor="#fff"
        android:layout_centerInParent="true"
        android:text="@string/who_s_that_pok_mon"
        android:background="@drawable/button_main_shape"
        android:layout_below="@id/textViewMainFragmentHeading"
        android:layout_height="wrap_content" />


    <Button
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:elevation="14dp"
        android:textSize="14sp"
        android:maxLines="1"
        android:id="@+id/buttonTwoMainFragmentTwo"
        android:padding="10dp"
        android:textColor="#fff"
        android:layout_alignLeft="@id/buttonOneMainFragmentOne"
        android:layout_alignStart="@id/buttonOneMainFragmentOne"
        android:layout_alignEnd="@id/buttonOneMainFragmentOne"
        android:layout_alignRight="@id/buttonOneMainFragmentOne"
        android:layout_centerInParent="true"
        android:text="@string/trivia"
        android:background="@drawable/button_yello_shape"
        android:layout_below="@id/buttonOneMainFragmentOne"
        android:layout_height="wrap_content" />


</RelativeLayout>
